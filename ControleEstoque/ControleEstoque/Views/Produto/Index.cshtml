@model ProdutoListViewModel


<h1>@Model.CategoriaAtual</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Link da Imagem
            </th>
            <th>
                Favoritos
            </th>
            <th>
                Estoque mínimo
            </th>
            <th>
                Estoque máximo
            </th>
            <th>
                Estoque Atual
            </th>
            <th>
                Categoria
            </th>
            <th>
                Lote
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produtos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsProdutoPreferido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstoqueMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstoqueMaximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lote.Referencia)
            </td>
            <td>
                <a class="btn btn-group btn-success" asp-action="Edit" asp-route-id="@item.ProdutoId">Editar</a> |
                <a class="btn btn-group btn-success" asp-action="Details" asp-route-id="@item.ProdutoId">Detalhes</a> |
                <a class="btn btn-group btn-success" asp-action="Delete" asp-route-id="@item.ProdutoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
