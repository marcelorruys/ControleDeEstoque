@model ControleEstoque.Models.Lote

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Lote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoteId" />
            <div class="form-group">
                <label asp-for="Referencia" class="control-label"> </label>
            </div>
            <div>
                <input asp-for="Referencia" class="form-control" />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Fornecedor </label>
            </div>
            <div>
                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn " /> |
                <a class="btn " asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
